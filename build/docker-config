#!/bin/bash
set -ex

REGISTRY=docker.io
NAMESPACE=jrbeverly
PROJECT=alpine

./docker-make configure -r $REGISTRY -n $NAMESPACE -i $PROJECT -t latest -v latest -o latest.build
./docker-make configure -r $REGISTRY -n $NAMESPACE -i $PROJECT -t 3.5 -v 3.5 -o 3.5.build
./docker-make configure -r $REGISTRY -n $NAMESPACE -i $PROJECT -t 3.4 -v 3.4 -o 3.4.build
./docker-make configure -r $REGISTRY -n $NAMESPACE -i $PROJECT -t 3.3 -v 3.3 -o 3.3.build